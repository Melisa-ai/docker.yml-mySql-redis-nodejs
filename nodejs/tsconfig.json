{
    "compilerOptions": {
        "outDir": "dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es6",
        "removeComments": true,
        "sourceMap": true,
        "watch": true,
        "baseUrl": "./src",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "noImplicitThis": true,
        "noImplicitUseStrict": true,
        "rootDir": "./src",
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/*"
    ]
}